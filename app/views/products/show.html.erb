<div class="container">     
  <h3>Product Details</h3>  
    <div class="card mt-4" style="width: 18rem;">
      <%@photos.each do |photo|%>
        <%= image_tag(photo) %>
      <%end%>
      
      <%=paginate @photos%>
      
      <%= render "listProduct", product: @product%>
      
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Serial No.<%=@product.serialNo%></li>
      </ul>
      
      <% if user_signed_in?%>
        <%if @product.user_id!= current_user.id%>
          <div class="card-body">
            <%=render 'cartAddRemove', product: @product%>
          </div>  
        <%else%>
          <div class="d-flex">
            <%=link_to "Edit" , edit_product_path(@product), class: "btn btn-warning m-2"%>
            <%=link_to "Delete" , product_path(@product),method: :delete, class: "btn btn-danger m-2 "%>
          </div>
        <%end%>
      <%else%>
        <div class="card-body">
          <%=render 'cartAddRemove', product: @product%>
        </div>
      <%end%>  
    </div>
    
    <% if user_signed_in? && @product.user_id!= current_user.id%>
        <%= render "comments/form" %>
    <%end%>
    
    <div class="custom_container bg-light mt-4"> 
      <div id="comment_pane">
        <% @comments.each do |comment|%>
          <%= render "comments/comment", comment: comment%>
        <%end%>
      </div>
    </div>
  <%if product_count()%>
    <h3>No Products are avaiable</h3>
  <%end%>
  <%=link_to "Add Product", new_product_path,method: :get, class: "btn btn-primary mt-4"%>
  <%=link_to "See All Products", products_path,method: :get, class: "btn btn-primary mt-4 ml-4"%>
</div>
