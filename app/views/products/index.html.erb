<div class="container">
<table class="table table-striped table-bordered table-hover ">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Edit</th>
    <th>Details</th>
    <th>Delete</th>
  </tr>
  <%
=begin%>
 <%@products.each do |article|%>
  <tr>
    <td><%=article.title%></td>
    <td><%=article.description%></td>
    


    <td><button class="btn btn-primary"><%=link_to "Edit", edit_article_path(article), class: "text-light text-decoration-none" %></button></td>
    <td><button class="btn btn-info"><%=link_to "Show Details", article_path(article), class: "text-light text-decoration-none" %></button></td>
    <td><button class="btn btn-danger"><%=link_to "Delete", article_path(article), method: :delete, class: "text-light text-decoration-none" %></button></td>
  </tr>
  <%end%> 
<%
=end%>
</table>

<%
=begin%>
 <button class="btn btn-primary"><%=link_to "Create New Article", new_article_path, class: "text-light text-decoration-none" %></button>
 
<%
=end%>

</div>

