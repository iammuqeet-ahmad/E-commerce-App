<% if @product.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
    <ul>
        <%@product.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
        <%end%>
    </ul>
  </div>
<% end %>

<%= form_for @product do |f| %>
   
  <div class="field">
    <%=f.label :name %><br>
    <%= f.text_field :name, required: true , class:"form-control"%><br>
  </div>

  <div class="field">
    <%=f.label :description %><br>
    <%= f.text_area :description,required: true  , class:"form-control"%><br><br>
  </div>

  <div class="field">
    <%=f.label :price %><br>
    <%= f.number_field :price,required: true  , class:"form-control"%><br><br>
  </div>

  <div class="field">
    <div class='form-outline form-white mb-4'>
      <%= f.file_field :photos, accept: 'image/png,image/jpeg,image/jpg',multiple: true ,required: true , class:"form-control"%>
    </div>
  </div>

  <div>
    <%= f.submit %>
  </div>
  <% end %> 
