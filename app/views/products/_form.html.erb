<% if @product.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
    <ul>
        <%@product.errors.full_messages.each do |msg|%>
          <li><%=msg%></li>
        <%end%>
    </ul>
  </div>
<% end %>

<%= form_for @product do |f| %>
   
    <%=f.label :name %><br>
    <%= f.text_field :name %><br>

    <%=f.label :description %><br>
    <%= f.text_area :description %><br><br>

    <%=f.label :price %><br>
    <%= f.number_field :price %><br><br>

    <div class='form-outline form-white mb-4'>
      <%= f.file_field :party_symbol, accept: 'image/png,image/jpeg,image/jpg',multiple:true, required: true , direct_upload: true, class: 'form-control text-center form-2' %>
    </div>

    <%= f.submit%>

    
  <% end %> 