<div class="container mt-4 ">
  <%if @cart.count!=0%>
    <h2>Products in Cart</h2>
    <table class="table table-striped table-bordered table-hover ">
      <thead class="dark">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Serial No</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
          <%=render partial: "list", collection: @cart, as: :cart%>
      </tbody>
    </table>
    <div class="w-100 float-btn">
      <h5>Total : <%=number_to_currency(total_amount(@cart), :unit => "$", :separator => ".", :delimiter => ",")%></h5>
    </div>
  <%if user_signed_in?%>
    <%=button_to "Proceed to checkout",carts_checkout_create_path,params: {cart: @cart},remote: true,class:"btn btn-outline-success text-uppercase float-btn"%> 
  <%else%>
    <%=button_to "Proceed to checkout",new_user_session_path,class:"btn btn-outline-success text-uppercase float-btn"%>
  <%end%>

   <%else%>
    <div class="align-center">
    <h4>Your shopping bag is empty</h4>
    <h5>Add an item to continue</h5>
   <%end%> 
<div class="home">
  <%= link_to products_path do %>
    <%= image_tag "left-arrow.png", id:"left-arrow", class:"cart-arrow"  %><span class="link-secondary text-deco text-uppercase">continue shopping</span>
  <% end %>
</div>
</div>
